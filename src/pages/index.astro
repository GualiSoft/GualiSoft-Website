---
import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig } from "../config/site";
import Hero from "../components/widgets/Hero.astro";
import Features from "../components/widgets/Features.astro";
import devImg from "../assets/images/dev_balanced.png";
import openSourceImg from "../assets/images/open-source.png";
import Content2 from "../components/widgets/Content2.astro";
const metadata = {
	title: `${siteConfig.name} â€” The next step for your project`,
	description:
		"A modern and professional template for your web projects with Astro and Tailwind CSS. Boost your development with a solid foundation.",
	ignoreTitleTemplate: true,
};
---

<BaseLayout {metadata}>
	<Hero
		title={`Open Source tools for <br class="hidden md:block" /> <span class="bg-linear-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent"> Developers</span>`}
		tagline="Linux + Open Source"
		description={`${siteConfig.description}. A solid suite of open source tools designed for modularity and performance.`}
		actions={[
			{
				text: "Get Started",
				href: "https://github.com/GualiSoft",
				variant: "primary",
				icon: "lucide:github",
			},
			{
				text: "Our Products",
				href: "/services",
				variant: "secondary",
				icon: "lucide:arrow-right",
				ariaLabel: "Learn more about our products",
			},
		]}
	/>
	<Features
		tagline="Features"
		title="What's Included"
		subtitle="A selection of tools to streamline your workflow."
		features={[
			{
				title: "GSWM",
				description:
					"The next generation of Wayland Compositors built by developpers for developpers.",
				icon: "lucide:scan-search",
				iconClass: "bg-blue-500/10 text-blue-400",
			},
			{
				title: "High Performance",
				description: "Written in Rust for memory safety and performance.",
				icon: "lucide:zap",
				iconClass: "bg-purple-500/10 text-purple-400",
			},
			{
				title: "Everything OS",
				description:
					"A Linux distribution built for performance and bleeding edge features.",
				icon: "lucide:palette",
				iconClass: "bg-pink-500/10 text-pink-400",
			},
		]}
	/>
	<Content2
		items={[
			{
				title: "Great Features OOTB",
				description:
					"Everything OS comes with everything you want as a developer but not bloat.",
				icon: "lucide:scan-search",
				iconClass: "bg-blue-500/10 text-blue-400",
			},
			{
				title: "High Performance",
				description: "Less compatibility with old hardware for more performance.",
				icon: "lucide:zap",
				iconClass: "bg-purple-500/10 text-purple-400",
			},
			{
				title: "Wayland Experience",
				description:
					"Comes with Desktop Environments or Window Managers such as GSWM with only Wayland.",
				icon: "lucide:palette",
				iconClass: "bg-pink-500/10 text-pink-400",
			},
		]}
		image={devImg}
		imageAlt="Development"
	>
		<Fragment>
			<h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2">
				Development
			</h3>
			We provide a solid foundation of utilities to maximise your productivity.
		</Fragment>
	</Content2>
	<Content2
		items={[
			{
				title: "Open Source",
				description:
					"Developed under the GPL license, ensuring it stays free and open source forever and no company could use it to make profit of the work of volunteers.",
				icon: "lucide:github",
				iconClass: "bg-indigo-500/10 text-indigo-400",
			},
			{
				title: "Community Driven",
				description:
					"Built with the feedback and contributions of the developer community.",
				icon: "lucide:users",
				iconClass: "bg-orange-500/10 text-orange-400",
			},
			{
				title: "Regular Updates",
				description:
					"Continuously improved with the latest technologies and best practices.",
				icon: "lucide:refresh-cw",
				iconClass: "bg-teal-500/10 text-teal-400",
			},
		]}
		image={openSourceImg}
		imageAlt="Community and Open Source"
		isReversed={true}
	>
		<Fragment>
			<h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2">
				Open Source & Community
			</h3>
			Join a community of passionate developers aiming to improve their workflow. 
		</Fragment>
	</Content2>
</BaseLayout>
